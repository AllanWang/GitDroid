<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="github.fragment.ShortContributions" />

    </data>

    <ca.allanwang.gitdroid.views.ContributionsView
        android:id="@+id/user_contributions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kau_activity_horizontal_margin"
        android:layout_marginEnd="@dimen/kau_activity_horizontal_margin"
        app:contributions="@{model}"
        tools:background="?colorAccent" />
</layout>