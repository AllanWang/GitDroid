<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="ca.allanwang.gitdroid.views.PathCrumb" />

    </data>

    <TextView
        android:id="@+id/path_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/kau_padding_small"
        android:paddingEnd="@dimen/kau_padding_small"
        android:paddingTop="@dimen/kau_padding_small"
        android:paddingBottom="@dimen/kau_padding_small"
        android:text="@{model.segment}"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textColor="?android:textColorPrimary"
        tools:text="SubPath"/>


</layout>